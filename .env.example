# Development Environment Variables (Copy to .env and modify)
DEBUG=True
SECRET_KEY=dev-only-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For development with SQLite: leave DATABASE_URL empty
# For development with PostgreSQL: uncomment and set values below
DATABASE_URL=

# PostgreSQL Settings (only required if DATABASE_URL is set)
# DB_NAME=procuretopay
# DB_USER=postgres
# DB_PASSWORD=your_secure_password_here
# DB_HOST=localhost
# DB_PORT=5432

# Production Configuration (set these in your deployment platform)
# DEBUG=False
# SECRET_KEY=your-super-secret-production-key-min-50-chars-long
# DATABASE_URL=postgresql://user:pass@host:port/dbname
# ALLOWED_HOSTS=yourdomain.com,subdomain.yourdomain.com
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com